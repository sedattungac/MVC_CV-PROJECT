@using Mvc.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <div style="float:left">

                                <h2>Cariler Detay Listesi</h2>

                            </div>
                            <div style="float:right">
                                <p>
                                    <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </p>
                            </div>


                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {


                                        <div class="time-label">
                                            <span class="bg-success">
                                                @x.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-star bg-orange"></i>

                                            <div class="timeline-item">


                                                <div class="timeline-body">
                                                    @x.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-danger btn-sm" href="/Sertifika/SertifikaSil/@x.ID"><i class="fas fa-trash"></i>Sil</a>
                                                    <a class="btn btn-warning btn-sm" href="/Sertifika/SertifikaGetir/@x.ID"><i class="fas fa-cog"></i>Düzenle</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
    </section>
</body>
</html>