@using Mvc.Models.Entity
@model  List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <b>Açıklama 1</b>
        <textarea rows="5" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
        <b>Açıklama 2</b>
        <textarea rows="5" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>

    }

    <br />

    <button class="btn btn-success">Güncelle</button>
</form>