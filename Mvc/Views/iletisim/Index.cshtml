@using Mvc.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <div style="float:left">

                                <h2>Mesaj Listesi</h2>

                            </div>
                            <div style="float:right">
                                <p>

                                </p>
                            </div>
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)x.Tarih).ToString("dd-MMMMMMMM-yyyy"))
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-comment"></i> @x.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@x.Adsoyad - </a> <b>@x.Konu</b></h3>
                                                <div class="timeline-body">
                                                   
                                                   <p>@x.Mesaj</p>
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-success btn-sm"href="mailto:@x.Mail"><i class="fas fa-comment"></i> Mail Gönder</a>
                                                    <a class="btn btn-danger btn-sm" href="/iletisim/MesajSil/@x.ID"><i class="fas fa-trash"></i> Sil</a>

                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
</body>
</html>
