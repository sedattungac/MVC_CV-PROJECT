@using Mvc.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Admin İşlemleri</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Düzenle</th>
        <th>Kaldır</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Sifre</td>

            <td><a class="btn btn-info btn-sm" href="/Admin/AdminGetir/@item.ID"><i class="fas fa-cog"></i> Düzenle</a></td>
            <td><a class="btn btn-danger btn-sm" href="/Admin/AdminSil/@item.ID"><i class="fas fa-trash"></i> Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullanici Ekle</a>


